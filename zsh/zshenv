# Custom local machine or secret envars
localzshenv=~/.zshenv.local
if [ -f "${localzshenv}" ]
then
    source "${localzshenv}"
fi

# Go
if command -v go &> /dev/null
then
   export GOPATH="$(go env GOPATH)"
   export PATH="$PATH:${GOPATH}/bin"
fi

# Rust
if [ -d "$HOME/.cargo/bin" ]
then
  export PATH="$PATH:$HOME/.cargo/bin"
fi

export LANG=en_GB.UTF-8
export EDITOR=vim
